<% @titles = %w/I II III aVR aVL aVF V_{1} V_{2} V_{3} V_{4} V_{5} V_{6}/ %>
set term postscript eps enhanced solid color size <%= @width || 15 %>cm,<%= @height || 12 %>cm "Helvetica" 18
set output "<%= @name %>.eps"

unset key
unset xtics
set border 2
set ytics nomirror out
set xrange [0:1000]
set yrange [-0.4:0.4]

set multiplot layout 3,4 columnsfirst
<% 1.upto(12) do |n| %>
  set title "<%= @titles[n-1] %>"
  plot "<%= @name %>.dat" u 1:<%= n + 1 %> w l lw 3
<% end %>
unset multiplot
